<h2> Create a new appointment </h2>
<hr>
<%= form_for @app, url:pet_appointments_path  do |f| %>
<div class="form-group">
  <strong>Veterinarian Name : </strong><%= f.text_field :veterinarian, class: "form-control" %><br>
</div>
<div class="form-group">
  <strong>Reason : </strong><%= f.text_field :reason, class: "form-control"%><br>
</div>
<div class="form-group">
  <strong>Time: </strong><%= f.datetime_local_field :time, class: "form-control"%><br>
</div>
<div class="form-group">
  <%= f.submit "New appointment", class: "btn btn-block btn-success"  %>
</div>
<% end %>
